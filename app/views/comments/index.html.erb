<p id="notice"><%= notice %></p>

<h1 class="lead">Comments</h1>

    <ul class="list list-unstyled">
      <% @comments.each do |comment| %>
        <div class="row">
           <div class="col-md-12">
           <div class="well">
          <%= link_to comment.body, comment %>
              <%= link_to 'Destroy', comment, method: :delete,  class: "pull-right btn btn-default", data: { confirm: 'Are you sure?' } %>
              <%= link_to 'Edit', edit_comment_path(comment), class: "pull-right btn btn-default" %>
          </div>
          </div>
        </div>
      <% end %>
    </ul>

<%= link_to 'New Comment', new_comment_path, class: "btn btn-primary" %>
